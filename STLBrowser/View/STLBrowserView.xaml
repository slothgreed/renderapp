<UserControl x:Class="STLBrowser.View.STLBrowserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:STLBrowser.View"
        xmlns:vm="clr-namespace:STLBrowser.ViewModel">
    <ScrollViewer>
        <ItemsControl ItemsSource="{Binding STLFiles}">
            <ItemsControl.Template>
                <ControlTemplate TargetType="ItemsControl">
                    <StackPanel IsItemsHost="True"/>
                </ControlTemplate>
            </ItemsControl.Template>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type vm:ThumbnailFileViewModel}">
                    <v:ThumbnailFileView/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>


</UserControl>
