<UserControl x:Class="STLBrowser.View.STLBrowserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:STLBrowser.View"
        xmlns:vm="clr-namespace:STLBrowser.ViewModel"
        xmlns:control="clr-namespace:KI.Foundation.Control;assembly=KI.Foundation"
    >
    <ScrollViewer>
        <ItemsControl ItemsSource="{Binding STLFiles}">
            <ItemsControl.Template>
                <ControlTemplate TargetType="ItemsControl">
                    <StackPanel IsItemsHost="True"/>
                </ControlTemplate>
            </ItemsControl.Template>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <control:ThumbnailFile/> 
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>


</UserControl>
