<UserControl x:Class="STLBrowser.View.ThumbnailFileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        >
    <StackPanel>
            <Image Source="{Binding Model.Thumbnail}" Width="128" Height="128" Margin="2"/>
            <TextBlock Text="{Binding Model.FileName}" Height="25" Margin="2" TextAlignment="Center"/>
    </StackPanel>
</UserControl>
