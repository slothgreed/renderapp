<UserControl
    x:Class="RenderApp.View.RendererView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:renderer="clr-namespace:KI.Renderer;assembly=KI.Renderer"
    xmlns:v="clr-namespace:RenderApp.View"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Width" Value="80" />
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <WrapPanel Margin="2">
            <TextBlock HorizontalAlignment="Stretch" Text="Output" />
            <ComboBox
                HorizontalAlignment="Stretch"
                ItemsSource="{Binding Model.ProcessingTexture}"
                SelectedIndex="{Binding TextureIndex}" />
        </WrapPanel>
        <WrapPanel Margin="2">
            <CheckBox
                HorizontalAlignment="Stretch"
                Content="PostProcess"
                IsChecked="{Binding EnablePostEffect}" />
        </WrapPanel>
        <Expander Header="Post Process">
            <v:PostEffectBase ItemsSource="{Binding PostProcesses}" />
        </Expander>
    </StackPanel>
</UserControl>
