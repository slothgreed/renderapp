<UserControl
    x:Class="RenderApp.View.BloomView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RenderApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock Text="Bloom" />
        <DockPanel>
            <TextBlock Text="Scale" />
            <Slider
                Maximum="{Binding Max}"
                Minimum="{Binding Min}"
                Value="{Binding Scale}" />
        </DockPanel>
        <DockPanel>
            <TextBlock Text="Sigma" />
            <Slider
                Maximum="{Binding Max}"
                Minimum="{Binding Min}"
                Value="{Binding Sigma}" />
        </DockPanel>
    </StackPanel>
</UserControl>
