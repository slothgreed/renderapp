<Window
    x:Class="RenderApp.View.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RenderApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Version"
    Width="300"
    Height="100"
    ResizeMode="NoResize"
    mc:Ignorable="d" WindowStartupLocation="CenterOwner" Background="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="60" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1">
            <Label x:Name="Version" />
            <Label x:Name="Build" />
        </StackPanel>
        <Button
            Grid.Column="2"
            Height="20"
            VerticalAlignment="Bottom"
            Click="Button_Click"
            Content="OK" />
    </Grid>
</Window>
