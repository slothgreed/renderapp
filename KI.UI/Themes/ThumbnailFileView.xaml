<ResourceDictionary
    x:Class="KI.UI.Themes.ThumbnailFileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:KI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Style TargetType="{x:Type control:ThumbnailFile}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type control:ThumbnailFile}">
                    <StackPanel Margin="3">
                        <Button
                            Width="128"
                            Height="128"
                            Content="ここには画像が入る" />
                        <Image
                            Width="128"
                            Height="128"
                            Source="{Binding ImagePath}" />
                        <TextBlock
                            x:Name="PART_FilePath"
                            Text="{Binding FilePath}"
                            TextAlignment="Center" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
