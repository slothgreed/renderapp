<UserControl x:Class="KI.UI.Controls.Vector3EditBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KI.UI.Themes"
             xmlns:controls="clr-namespace:KI.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <WrapPanel>
        <TextBlock Text="X" Background="Red" Width="15" TextAlignment="Center"/>
        <controls:KITextBox Text="{Binding XValue, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Width="80"/>
        <TextBlock Text="Y" Background="Green" Width="15" TextAlignment="Center"/>
        <controls:KITextBox Text="{Binding YValue, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Width="80"/>
        <TextBlock Text="Z" Background="Blue" Width="15" TextAlignment="Center"/>
        <controls:KITextBox Text="{Binding ZValue, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Width="80"/>
    </WrapPanel>
</UserControl>
