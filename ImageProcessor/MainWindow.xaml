<Window x:Class="ShaderTraining.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShaderTraining"
        xmlns:view="clr-namespace:ShaderTraining.View"
        xmlns:vm="clr-namespace:ShaderTraining.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Mode">
                <MenuItem Command="{Binding PlaneObject}" Header="Plane" />
                <MenuItem Command="{Binding SphereObject}" Header="Sphere" />
            </MenuItem>
        </Menu>
        <view:ViewportView Grid.Column="0" Grid.Row="1" DataContext="{Binding ViewportViewModel}"/>
        <view:PropertyView Grid.Column="1" Grid.Row="1" Margin="10" DataContext="{Binding PropertyViewModel}"/>
    </Grid>
</Window>
