<UserControl
    x:Class="RenderApp.View.LightView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RenderApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <StackPanel>
        <Expander
            Margin="2"
            Header="SRT"
            IsExpanded="True">
            <local:SceneNodeBase />
        </Expander>
        <Expander
            Margin="2"
            Header="Color"
            IsExpanded="True">
            <StackPanel>
                <WrapPanel Margin="2">
                    <TextBlock Text="Ambient" Width="50"/>
                    <toolkit:ColorPicker ColorMode="ColorPalette" />
                </WrapPanel>
                <WrapPanel Margin="2">
                    <TextBlock Text="Diffuse" Width="50" />
                    <toolkit:ColorPicker ColorMode="ColorPalette" />
                </WrapPanel>
                <WrapPanel Margin="2">
                    <TextBlock Text="Specular" Width="50"/>
                    <toolkit:ColorPicker ColorMode="ColorPalette" />
                </WrapPanel>
            </StackPanel>
        </Expander>
    </StackPanel>
</UserControl>
